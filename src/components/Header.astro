<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: #1a1a1a;
		box-shadow: 0 2px 8px rgba(var(--gray), 0.2);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}
	h2 a,
	h2 a.active {
		text-decoration: none;
		color: rgb(var(--gray-dark));
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: rgb(var(--gray-dark));
		border-bottom: 4px solid transparent;
		text-decoration: none;
		transition: border-color 0.3s ease, color 0.3s ease;
	}
	nav a:hover {
		
	}
	nav a.active {
		border-bottom-color: var(--accent);
		color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
		color: rgb(var(--gray-dark));
	}
	svg {
		fill: currentColor;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
